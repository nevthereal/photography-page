---
import { Cloudinary } from "@cloudinary/url-gen";
import { Image } from "astro:assets";

interface Props {
  src: string;
  date: Date;
}

const { src, date } = Astro.props;

export const cld = new Cloudinary({
  cloud: {
    cloudName: "dvgm3oo5q",
  },
});

let cldSrc = cld.image(src).format("auto");
---

<div class='flex'>
  <Image
    class:list={"flex my-auto"}
    src={cldSrc.toURL()}
    alt='Image'
    width={500}
    height={500}
    loading={"eager"}
    quality={"low"}
  />
  <p>{date.toLocaleDateString([], {})}</p>
</div>
